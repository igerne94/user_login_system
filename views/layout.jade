doctype html
html
  head
    title #{title}: User_Login_System
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible' content='IE=edge')
    meta( name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel='stylesheet' href='/stylesheets/bootstrap.css')
  body
    nav.navbar.navbar-expand-md.navbar-light.bg-light.fixed-top
      .container
        .navbar-header
          button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbar' aria-controls='navbar' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') User_Login_System								
        #navbarsExampleDefault.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li(class=(title == 'Members' ? 'active' : ''))
              a.nav-link(href='/') Members			
            if !user	
              li(class=(title == 'Register' ? 'active' : ''))
                a.nav-link(href='/users/register') Register
              li(class=(title == 'Login' ? 'active' : ''))
                a.nav-link(href='/users/login') Log In
          ul.nav.navbar-nav.navbar-right
            li
              a.nav-link(href='/users/logout') Logout
    .container
      != messages()
      block content
  script( src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
  script( src='/javascripts/bootstrap.js' )